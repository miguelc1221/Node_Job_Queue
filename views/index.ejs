<!DOCTYPE html>
<html lang="en">
  <head>
    <title>MoshPit Jobs</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link rel='stylesheet' href='/css/styles.css'/>
  </head>
  <body>

    <div class="container">
      <h1 class="text-center">Job Queue</h1>
      <div class="row search-bar">
        <form role="search" action="/job" method="POST">
          <div class="input-group">
            <input type="text" class="form-control" placeholder="Search for url" name="url_term" id="url_term">
            <div class="input-group-btn">
              <button class="btn btn-default" type="submit">
                <i class="glyphicon glyphicon-search"></i>
              </button>
            </div>
          </div>
        </form>
      </div>

      <div class="row">
        <div class="col-xs-6">
          <div class="list-group">
            <% jobResults.forEach(function(job) { %>
                <a href="#" class="list-group-item">Job: <%= job %></a>
            <% }); %>
          </div>
        </div>

        <div class="col-xs-6">
          <div class="panel panel-default">
            <div class="panel-heading">
              <h3 class="panel-title">Panel title</h3>
            </div>
            <div class="panel-body">
              Panel content
            </div>
          </div>
        </div>
      </div>

    </div>

  </body>
</html>