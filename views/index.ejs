<!DOCTYPE html>
<html lang="en">
  <head>
    <% include ./common/head %>
  </head>
  <body>
    <div class="container">
      <h1 class="text-center">Job Queue</h1>
      <div class="row search-bar">
        <form role="search" action="/job" method="POST">
          <% if(error.length > 0){ %>
            <div class="form-group has-error">
              <label class="control-label" for="inputError2"><%= error %></label>
          <% } else{ %>
            <div class="form-group">
          <% } %>
            <div class="input-group ">
              <input type="text" class="form-control" placeholder="Enter a URL" name="url_term" id="url_term">
              <div class="input-group-btn">
                <button class="btn btn-default srch-btn" type="submit">
                  <i class="glyphicon glyphicon-search"></i>
                </button>
              </div>
            </div>
          </div>
        </form>
      </div>

        <div class="jobs">
          <div class="list-group">
            <% jobIds.forEach(function(id) { %>
                <a href="/job/<%= id %>" class="list-group-item">JobID: <%= id %></a>
            <% }); %>
          </div>
        </div>

    </div>

  </body>
</html>